@model ShauliBlogProject.Models.Post

@{
    ViewBag.Title = "Post Tree D3";
    IEnumerable<SelectListItem> selectList = ViewBag.Posts;
}

<h2>Post Tree D3</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class='col-md-4'>
        @Html.LabelFor(model => model.PostID, "Choose Post: ", new { @class = "TreeLabel" })
    </div>

    <div class="col-xs-4">
        <div class="form-group">
            @Html.DropDownList("PostID", new SelectList(selectList, "Value", "Text"), new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Generate" class="btn btn-default" />
    </div>
}


