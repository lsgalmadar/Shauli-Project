<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shauli's Blog</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

    <!--Header-->
    <div class="container">
        <div class="page-header">
            <h2>Shauli's Blog</h2>
        </div>
    </div>
    <!--Navbar-->
    <div class="navbar navbar-inverse navbar-fixed">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Shauli's Blog", "Index", "Blog", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Blog", "Index", "Blog")</li>
                    <li>@Html.ActionLink("Fan Club", "Index", "Fans")</li>
                    <li>
                        <div id="transDemo2">
                            <div class="hover">
                                <img src="/images/rss.png" width="30" height="30">
                            </div>
                        </div>
                    </li>
                    <li><a href="#">Subscribe via. RSS</a></li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">More <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">@Html.ActionLink("About", "About", "Maps")</a></li>
                            <li><a href="#">@Html.ActionLink("Fans Statistics", "Plugin", "Blog")</a></li>
                            <li><a href="#">@Html.ActionLink("Post Statistics", "PostTreeD3", "Tree")</a></li>
                        </ul>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <!--Intro-->
    <div class="text-center">
        <img src="~/Images/Intro.PNG" class="w3-round" />
    </div>
    <!--Body Content-->
    <div id="content">
        <div id="mainContent">
            @RenderBody()
        </div>
        <aside>
            <section>
                <header>
                    <h3>Categories</h3>
                </header>
                <ul>
                    <li><a href="#">Lorem ipsum dolor</a></li>
                    <li><a href="#">Sit amet consectetur</a></li>
                    <li><a href="#">Adipisicing elit sed</a></li>
                </ul>
            </section>
            <section>
                <header>
                    <h3>Archives</h3>
                </header>
                <ul>
                    <li><a href="#">December 2008</a></li>
                    <li><a href="#">January 2009</a></li>
                    <li><a href="#">February 2009</a></li>
                    <li><a href="#">March 2009</a></li>
                </ul>
            </section>
            <section>
                <header>
                    <h3>AD</h3>
                </header>
                <canvas id="myCanvas" width="200" height="100" style="border:0px solid #d3d3d3;">
                    Your browser does not support the HTML5 canvas tag.
                </canvas>
            </section>
        </aside>
    </div>
    <!--Footer-->
    <div style="background-color:black;color:#fff;margin-top:70px;padding:60px;">
        <div class="container">
            <footer class="w3-row-padding w3-padding-32">
                <div class="w3-third">
                    <h3>About</h3>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut la</p>
                </div>
                <div class="w3-third">
                    <h3>Blogroll</h3>
                    <ul>
                        <li><a href="#">NETTUTS+</a></li>
                        <li><a href="#">FreelanceSwitch</a></li>
                    </ul>
                </div>
                <div class="w3-third">
                    <h3>Popular</h3>
                    <ul>
                        <li><a href="#">This is the title of a blog post</a></li>
                        <li><a href="#">Lorem ipsum dolor sit amet</a></li>
                        <li><a href="#">Consectetur adipisicing elit, sed do eiusmod</a></li>
                    </ul>
                </div>
            </footer>
        </div>
    </div> 

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
